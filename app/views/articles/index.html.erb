<section style="width: 100%">
  <div>
    <h1>News List</h1>
    <div>
      <%= form_tag(articles_path, method: :get) do %>
        <%= text_field_tag :search_query, @search_query, placeholder: "Search articles" %>
        <%= submit_tag "Search" %>
      <% end %>
    </div>
    <hr>
  </div>
  <div>
    <%# 一時的に表示 %>
    <h2>MEDIA</h2>
    <% @media.each do |medium| %>
      <%= link_to medium.name, medium.url %><br />
    <% end %>
    <hr>
  </div>
  <div style="display: flex; justify-content: space-between;">
    <div style="width: 20%">
      <%# 一時的に表示 %>
      <h2>Categories(30)</h2>
      <% @categories.each do |category| %>
        <p><%= category.name %> (<%= category.used_articles %>)</p>
      <% end %>
    </div>
    <div style="width: 70%">
      <h2>Articles</h2>
      <div style="width: 100%; display: flex; justify-content: space-between; flex-wrap: wrap">
        <% @articles.each do |article| %>
          <div style="
            width: 45%;
            border: 1px solid #ddd;
            border-radius: 10px;
            margin: 10px;
            padding: 10px
            word-break: break-all;
          ">
            <h4><%= link_to article.title, article.url %></h4>
            <img src=<%= article.image%>><br />
            <%= article.published %><br />
            <%= article.categories %><br />
            <%= article.medium.name %><br />
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>